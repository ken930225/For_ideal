<div class="container">
	<div class="row box">
		<div class="col-xs-9">
			<h2>Workout一覧(全ユーザー)</h2>
			<!--workout一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>日付</th>
						<th>トレーニング場所</th>
						<th>種目</th>
						<th>ターゲット</th>
						<th>重量</th>
						<th>回数</th>
						<th>イイね</th>
					</tr>
				</thead>

				<tbody>
					<% @workouts.each do |workout| %>
					<tr>
						<td>
							<%#= link_to user_path(workout.user) do %>
							<%#= attachment_image_tag(workout.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<%# end %>
						</td>
						<td><%= link_to workout.date, workout_path(workout) %></td>
						<td><%= workout.place %></td>
						<td><%= workout.menu %></td>
						<td><%= workout.target %></td>
						<td><%= workout.weight %>kg</td>
						<td><%= workout.count %>回</td>
						<!-- いいね機能 -->
	          <td>
	            <%# if workout.favorited_by?(current_user) %>
	              <%#= link_to wokrout_favorites_path(wokrout), method: :delete do %>
	                <span class="glyphicon glyphicon-heart"><%#= workout.favorites.count%></span>
	              <%# end %>
	            <%# else %>
	              <%#= link_to workout_favorites_path(workout), method: :post do %>
	                <span class="glyphicon glyphicon-heart-empty"><%#= workout.favorites.count %></span>
	              <%# end %>
	            <%# end %>
	          </td>
						<!-- いいね機能 -->

					</tr>
					<% end %>
				</tbody>
			</table>
			<!--books一覧 -->
		</div>
	</div>
</div>
