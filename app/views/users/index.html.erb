<div class="row">
	<div class="col-xs-9 box">
		<h2>Menber 一覧</h2>
		<!--Menber一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>プロフィール</th>
					<th>名前</th>
					<th>自己紹介</th>
					<th>目標</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%#= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= link_to user.name, user_path(user), class: "user_#{user.id}" %></td>
					<td><%= user.introduction %></td>
					<td><%= user.objective %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
